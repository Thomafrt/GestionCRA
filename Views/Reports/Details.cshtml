@model CRA.Models.Report

@{
    ViewData["Title"] = "Report Details";
}

<h1>Details</h1>

<div>
    <h4>Report</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Employee)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Employee.Nom)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.WeekStart)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.WeekStart)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.WeekEnd)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.WeekEnd)
        </dd>
    </dl>
</div>
<div>
    <h3>Entries</h3>
    <table class="table">
        <thead>
            <tr>
                <th>Mission</th>
                <th>Week</th>
               <th>Total Hours</th
            </tr>
        </thead>
        <tbody>
            @foreach (var entry in Model.Entries.Where(e => e.Week >= Model.WeekStart && e.Week <= Model.WeekEnd))
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => entry.Mission.Nom)</td>
                    <td>@Html.DisplayFor(modelItem => entry.Week)</td>
                    <td>@Html.DisplayFor(modelItem => entry.TotalHours)</td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
